        </div>

        <div>
            <button class="btn btn-light text-primary mx-1" @onclick="NavigateToAbout">About</button>
            <button class="btn btn-light text-primary mx-1" @onclick="@(() => NavigationManager.NavigateTo("contacts"))">Contacts</button>
        </div>

    </div>
